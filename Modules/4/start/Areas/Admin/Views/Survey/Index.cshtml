@model List<Globomantics.Survey.Models.CustomerSurvey>

@{
    ViewData["Title"] = "Index";
}

<h1>All Surveys:</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>

    @foreach (CustomerSurvey customerSurvey in Model)
    {
        <tr>
            <td>
            <a class="nav-link text-dark" href="/admin/Survey/@customerSurvey.Id">
                @Html.DisplayFor(model => customerSurvey.Title)
            </a>          
            </td>
            <td>
            <a class="nav-link text-dark" href="/admin/SurveyResponses/@customerSurvey.Id">
                View Responses
            </a>          
            </td>
        </tr>
    }

  </tbody>
</table>
   


</div>


